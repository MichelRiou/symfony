{% extends 'base_layout_html.twig' %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tr>
            <th>Titre</th>
            <th>Cat√©gorie</th>
            <th>Action</th>
        </tr>
        {% for article in articleList %}
            <tr>
                <td><a href="{{ path('article_details',{id:article.id}) }}">{{ article.title }}</a></td>
                <td><a href="{{ path('article_list',{categoryName:article.category.name,page:1}) }}">{{ article.category.name }}</a></td>
                <td><a href="{{ path('article_delete',{id:article.id}) }}">Supprimer</a></td>
            </tr>
        {% else %}
            <h2>Aucuns resultat</h2>
        {% endfor %}
    </table>

    <ul class="pagination">
        {% for pageNumber in  1..nbPages %}
            <li class="page-item {{ currentPage==pageNumber?'active':'' }}">
                <a href="{{ path('article_list', {page:pageNumber,categoryName:category}) }}" class="page-link">
                    {{ pageNumber }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}


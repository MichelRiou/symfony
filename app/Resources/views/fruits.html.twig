{% extends "base_layout_html.twig" %}
{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/fruits.css') }}">
{% endblock %}


{% block content %}
    {{ parent() }}

    <ul class="list-group">
        {% for fruit in fruitList %}
            <li class="list-group-item">
            {% if loop.index is divisible by (2) %}
                <strong>{{ fruit }}</strong>
            {% else %}
                {{ fruit }}
            {% endif %}
            </li>
        {% endfor %}
    </ul>
    <ul class="fruit-list">
                                <!-- Exemple pour le If-->
        {% for food in foodList if food.edible %}
            <li>
                {{ food.name }} de type {{ food.type }} est mangeable et c'est {{ food.edible?"":"pas" }} mangeable
            </li>
        {% endfor %}
    </ul>
    <a href="{{ path('hellopage',{age:5}) }}">lien</a>
{% endblock %}